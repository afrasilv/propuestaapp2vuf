<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="afrafmar.buscaceres.RecyclerViewCardsFragment">

    <android.support.v7.widget.CardView
        android:layout_gravity="center_horizontal"
        android:id="@+id/cards_welcome"
        android:layout_width="300.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:layout_marginBottom="4.0dip"
        app:cardCornerRadius="4.0dip"
        app:cardBackgroundColor="#888888">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="17.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/subjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.0dip"
                android:layout_marginTop="13.0dip"
                android:layout_marginRight="13.0dip"
                android:layout_marginBottom="13.0dip"
                android:text="Nombre Asignatura"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
